@model Apartment
<div>
	<h4>Building</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Number)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Number)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Floor)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Floor)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Bedrooms)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Bedrooms)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Bathrooms)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Bathrooms)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Status)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Status)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Building)
		</dt>
		<dd class="col-sm-10">
			<a asp-controller="Users" asp-action="Details" asp-route-id="@Model.Building.Id">@Model.Building.getFullAddress()</a>
		</dd>
	</dl>
</div>