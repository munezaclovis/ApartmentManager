@model IEnumerable<Apartment>
@{
	ViewData["Title"] = "Apartment";
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">Apartment</h6>
		<a class="btn btn-info btn-sm d-inline text-dark float-right" asp-action="Add"><i class="fas fa-plus"></i> Add Apartment</a>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="90%" cellspacing="0">
				<thead>
					<tr>
						<th>@Html.DisplayNameFor(model => model.Number)</th>
						<th>@Html.DisplayNameFor(model => model.Floor)</th>
						<th>@Html.DisplayNameFor(model => model.Bedrooms)</th>
						<th>@Html.DisplayNameFor(model => model.Bathrooms)</th>
						<th>@Html.DisplayNameFor(model => model.Building)</th>
						<th>@Html.DisplayNameFor(model => model.Status)</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tfoot>
					<tr>
						<th>@Html.DisplayNameFor(model => model.Number)</th>
						<th>@Html.DisplayNameFor(model => model.Floor)</th>
						<th>@Html.DisplayNameFor(model => model.Bedrooms)</th>
						<th>@Html.DisplayNameFor(model => model.Bathrooms)</th>
						<th>@Html.DisplayNameFor(model => model.Building)</th>
						<th>@Html.DisplayNameFor(model => model.Status)</th>
						<th>Actions</th>
					</tr>
				</tfoot>
				<tbody>
					@foreach (var item in Model)
					{
					<tr>
						<td>@Html.DisplayFor(model => item.Number)</td>
						<td>@Html.DisplayFor(model => item.Floor)</td>
						<td>@Html.DisplayFor(model => item.Bedrooms)</td>
						<td>@Html.DisplayFor(model => item.Bathrooms)</td>
						<td>
							@item.Building.getFullAddress()
						</td>
						<td>@Html.DisplayFor(model => item.Status)</td>
						<td>
							<a class="btn btn-amber btn-rounded btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
							<a class="btn btn-light-blue btn-rounded btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
							@if (item.Status == "A")
							{
								<a class="btn btn-red btn-rounded btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
							}
							else
							{
								<a class="btn btn-pink btn-rounded btn-sm" asp-action="Restore" asp-route-id="@item.Id">Restore</a>
							}
						</td>

					</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
@section Css{
	<link href="~/css/datatable.css" />
}

@section Scripts{
	<script src="~/lib/datatables/jquery.dataTables.min.js"></script>
	<script src="~/lib/datatables/dataTables.bootstrap4.min.js"></script>
	<script src="~/js/datatable.js"></script>
}